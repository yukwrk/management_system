<%= form_with(model: construction, local: true) do |form| %>
  <% if construction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(construction.errors.count, "error") %> prohibited this construction from being saved:</h2>

      <ul>
      <% construction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :'現場名' %>
    <%= form.text_field :construction_name %>
  </div>

  <div class="field">
    <%= form.label :'担当者' %>
    <%= form.text_field :person %>
  </div>

  <div class="field">
    <%= form.label :'請負金額①' %>
    <%= form.number_field :contract_price %>
  </div>


  <div class="field">
    <%= form.label :'材料費' %>
    <%= form.number_field :material_cost %>
  </div>

  <div class="field">
    <%= form.label :'外注費' %>
    <%= form.text_field :subcontract_cost %>
  </div>

  <div class="field">
    <%= form.label :'現場経費' %>
    <%= form.number_field :site_overhead_expenses %>
  </div>

  <div class="field">
    <%= form.label :'原価計 ②' %>
    <%= form.number_field :total_cost %>
  </div>

  <div class="field">
    <%= form.label :'販管費13% ③' %>
    <%= form.number_field :selling %>
  </div>

  <div class="field">
    <%= form.label :'予算収支' %>
    <%= form.number_field :cash_budget %>
  </div>

  <div class="field">
    <%= form.label :'請求額(税抜き) ④' %>
    <%= form.number_field :charge %>
  </div>

  <div class="field">
    <%= form.label :'差額 ⑤' %>
